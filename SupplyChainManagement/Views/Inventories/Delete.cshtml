@model SupplyChainManagement.Models.Inventory
@{
    ViewData["Title"] = "Delete Inventory";
}
<h1>Delete Inventory</h1>
<hr />
<h3>Are you sure you want to delete this?</h3>
<dl class="row">
    <dt class="col-sm-2">Product</dt>
    <dd class="col-sm-10">@Model.Product?.Name</dd>
    <dt class="col-sm-2">Location</dt>
    <dd class="col-sm-10">@Model.Location</dd>
    <dt class="col-sm-2">Quantity On Hand</dt>
    <dd class="col-sm-10">@Model.QuantityOnHand</dd>
    <dt class="col-sm-2">Reorder Level</dt>
    <dd class="col-sm-10">@Model.ReorderLevel</dd>
</dl>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
