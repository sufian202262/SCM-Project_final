@model SupplyChainManagement.Models.Supplier
@{
    ViewData["Title"] = "Supplier Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0"><i class="fas fa-industry"></i> Supplier Details</h1>
    <div class="btn-group" role="group">
        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id"><i class="fas fa-edit"></i> Edit</a>
        <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-arrow-left"></i> Back to List</a>
    </div>
    </div>

<div class="row g-3 mb-4">
    <div class="col-lg-6">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-light">
                <strong><i class="fas fa-building"></i> Company</strong>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <div class="text-muted small">Company Name</div>
                    <div class="fw-semibold">@Model.CompanyName</div>
                </div>
                <div class="mb-2">
                    <div class="text-muted small">Contact Person</div>
                    <div>@Model.Name</div>
                </div>
                <div class="mb-2">
                    <div class="text-muted small">Address</div>
                    <div><i class="fas fa-location-dot text-secondary"></i> @Model.Address</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-light">
                <strong><i class="fas fa-address-card"></i> Contact</strong>
            </div>
            <div class="card-body d-flex flex-column gap-2">
                <div>
                    <div class="text-muted small">Email</div>
                    <a class="text-decoration-none" href="mailto:@Model.Email"><i class="fas fa-envelope text-secondary"></i> @Model.Email</a>
                </div>
                <div>
                    <div class="text-muted small">Phone</div>
                    <a class="text-decoration-none" href="tel:@Model.Phone"><i class="fas fa-phone text-secondary"></i> @Model.Phone</a>
                </div>
                @if (!string.IsNullOrWhiteSpace(Model.Website))
                {
                    <div>
                        <div class="text-muted small">Website</div>
                        <a class="text-decoration-none" href="@Model.Website" target="_blank"><i class="fas fa-globe text-secondary"></i> @Model.Website</a>
                    </div>
                }
            </div>
        </div>
    </div>
    </div>

<div class="card shadow-sm">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <strong><i class="fas fa-boxes-stacked"></i> Products</strong>
        <span class="badge bg-secondary">@((Model.Products?.Count) ?? 0) items</span>
    </div>
    <div class="card-body">
        @if (Model.Products != null && Model.Products.Any())
        {
            <div class="table-responsive">
                <table class="table table-sm align-middle">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>SKU</th>
                            <th class="text-end">Price</th>
                            <th class="text-end">Stock</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model.Products)
                        {
                            <tr>
                                <td class="fw-semibold">@p.Name</td>
                                <td><span class="badge bg-light text-dark border">@p.SKU</span></td>
                                <td class="text-end text-nowrap">@p.Price.ToString("C")</td>
                                <td class="text-end">@p.StockQuantity</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info mb-0">
                <i class="fas fa-info-circle"></i> No products linked to this supplier.
            </div>
        }
    </div>
    </div>
