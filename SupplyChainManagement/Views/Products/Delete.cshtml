@model SupplyChainManagement.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}
<h1>Delete Product</h1>
<hr />
<h3>Are you sure you want to delete this?</h3>
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">SKU</dt>
    <dd class="col-sm-10">@Model.SKU</dd>
    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
    <dt class="col-sm-2">Supplier</dt>
    <dd class="col-sm-10">@Model.Supplier?.Name</dd>
</dl>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
