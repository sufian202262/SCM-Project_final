@model SupplyChainManagement.Models.Product
@using SupplyChainManagement.Models.Enums
@{
    ViewData["Title"] = "Product Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0"><i class="fas fa-box"></i> Product Details</h1>
    <div class="btn-group" role="group">
        @if (User.IsInRole(UserRoles.WarehouseStaff))
        {
            <form asp-controller="Products" asp-action="AddToCart" method="post" class="d-inline">
                <input type="hidden" name="id" value="@Model.Id" />
                <input type="hidden" name="quantity" value="1" />
                <button type="submit" class="btn btn-primary" @(Model.StockQuantity <= 0 ? "disabled" : "") title="@(Model.StockQuantity <= 0 ? "Out of stock" : "Add to order")"><i class="fas fa-cart-plus"></i> Add to Cart</button>
            </form>
        }
        else
        {
            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id"><i class="fas fa-edit"></i> Edit</a>
        }
        <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-arrow-left"></i> Back</a>
    </div>
    </div>

<div class="row g-3">
    <div class="col-lg-7">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-light"><strong><i class="fas fa-circle-info"></i> Product</strong></div>
            <div class="card-body">
                <div class="mb-2">
                    <div class="text-muted small">Name</div>
                    <div class="fs-5 fw-semibold">@Model.Name</div>
                </div>
                @if (!string.IsNullOrWhiteSpace(Model.SKU))
                {
                    <div class="mb-2">
                        <div class="text-muted small">SKU</div>
                        <span class="badge bg-light text-dark border">@Model.SKU</span>
                    </div>
                }
                @if (!string.IsNullOrWhiteSpace(Model.Description))
                {
                    <div class="mb-2">
                        <div class="text-muted small">Description</div>
                        <div>@Model.Description</div>
                    </div>
                }
                <div class="row mt-2">
                    <div class="col-6">
                        <div class="text-muted small">Unit Price</div>
                        <div class="fw-semibold text-nowrap">@Model.Price.ToString("C")</div>
                    </div>
                    <div class="col-6">
                        <div class="text-muted small">Active</div>
                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">@(Model.IsActive ? "Active" : "Inactive")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-5">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-light"><strong><i class="fas fa-chart-column"></i> Stock</strong></div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="text-muted small">Stock Quantity</div>
                        <div class="fs-5 fw-semibold">
                            @if (Model.StockQuantity <= 0)
                            {
                                <span class="badge bg-danger">Out of Stock</span>
                            }
                            else
                            {
                                @Model.StockQuantity
                            }
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="text-muted small">UoM</div>
                        <div class="fs-5">@Model.UnitOfMeasure</div>
                    </div>
                </div>
                @if (!string.IsNullOrWhiteSpace(Model.Barcode))
                {
                    <hr />
                    <div>
                        <div class="text-muted small">Barcode</div>
                        <div>@Model.Barcode</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="card mt-3 shadow-sm">
    <div class="card-header bg-light"><strong><i class="fas fa-industry"></i> Supplier</strong></div>
    <div class="card-body">
        <div class="fw-semibold">@Model.Supplier?.CompanyName</div>
        @if (!string.IsNullOrWhiteSpace(Model.Supplier?.Email))
        {
            <div><i class="fas fa-envelope text-secondary"></i> <a href="mailto:@Model.Supplier.Email">@Model.Supplier.Email</a></div>
        }
    </div>
</div>
