@model IEnumerable<SupplyChainManagement.Models.Product>
@using SupplyChainManagement.Models.Enums
@{
    ViewData["Title"] = "Products";
}

<div class="d-flex flex-wrap gap-2 justify-content-between align-items-center mb-3">
    <div class="d-flex align-items-center gap-2">
        <h1 class="mb-0"><i class="fas fa-boxes-stacked"></i> Products</h1>
        <span class="badge bg-primary-subtle text-primary border border-primary">@Model?.Count() total</span>
    </div>
    <div class="d-flex gap-2">
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-search"></i></span>
            <input id="productSearch" type="text" class="form-control" placeholder="Search by name, SKU, supplier..." />
        </div>
        @if (User.IsInRole(UserRoles.Admin) || User.IsInRole(UserRoles.Supplier))
        {
            <a class="btn btn-primary" asp-action="Create"><i class="fas fa-plus"></i> Create New</a>
        }
    </div>
</div>

@if (!(Model?.Any() ?? false))
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No products found.
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="productsTable" class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>SKU</th>
                            <th class="text-end">Price</th>
                            <th class="text-end">Stock</th>
                            <th class="text-end">Supplier</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.Name</td>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(item.SKU))
                                {
                                    <span class="badge bg-light text-dark border">@item.SKU</span>
                                }
                            </td>
                            <td class="text-end text-nowrap">@item.Price.ToString("C")</td>
                            <td class="text-end">
                                @if (item.StockQuantity <= 0)
                                {
                                    <span class="badge bg-danger">Out of Stock</span>
                                }
                                else
                                {
                                    @item.StockQuantity
                                }
                            </td>
                            <td class="text-end">@item.Supplier?.CompanyName</td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye"></i> Details</a>
                                    @if (User.IsInRole(UserRoles.WarehouseStaff))
                                    {
                                        <form asp-action="AddToCart" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="quantity" value="1" />
                                            <button type="submit" class="btn btn-sm btn-primary" @(item.StockQuantity <= 0 ? "disabled" : "") title="@(item.StockQuantity <= 0 ? "Out of stock" : "Add to order")">
                                                <i class="fas fa-cart-plus"></i> Add
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i> Edit</a>
                                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i> Delete</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        (function () {
            const search = document.getElementById('productSearch');
            const table = document.getElementById('productsTable');
            if (!search || !table) return;
            const rows = Array.from(table.querySelectorAll('tbody tr'));
            search.addEventListener('input', function () {
                const q = this.value.toLowerCase();
                rows.forEach(r => {
                    const text = r.innerText.toLowerCase();
                    r.style.display = text.includes(q) ? '' : 'none';
                });
            });
        })();
    </script>
}
