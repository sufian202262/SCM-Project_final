<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SupplyChainManagement</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Font Awesome for icons used across the app -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SupplyChainManagement.styles.css" asp-append-version="true" />
    <style>
        .navbar.sc-navbar { backdrop-filter: saturate(180%) blur(6px); }
        .navbar.sc-navbar .navbar-brand { font-weight: 700; letter-spacing: .3px; }
        .navbar.sc-navbar .nav-link { position: relative; transition: color .15s ease-in-out, background-color .15s, opacity .15s; opacity: .95; border-radius: .5rem; }
        .navbar.sc-navbar .nav-link:hover { opacity: 1; background-color: rgba(255,255,255,.12); }
        .navbar.sc-navbar .nav-link.active { background-color: rgba(255,255,255,.18); opacity: 1; }
        .navbar.sc-navbar .nav-link .fa-solid, .navbar.sc-navbar .nav-link .fa-regular { width: 1.1rem; text-align: center; margin-right: .35rem; }
        /* Animated underline */
        .navbar.sc-navbar .nav-link::after { content: ""; position: absolute; left: .5rem; right: .5rem; bottom: .35rem; height: 2px; background-color: rgba(255,255,255,.85); transform: scaleX(0); transform-origin: left; transition: transform .2s ease; }
        .navbar.sc-navbar .nav-link:hover::after, .navbar.sc-navbar .nav-link.active::after { transform: scaleX(1); }
        /* Dropdown toggle hover should match */
        .navbar.sc-navbar .dropdown-toggle:hover { background-color: rgba(255,255,255,.12); }
    </style>
</head>
<body>
    <header>
        @{
            string? currentController = ViewContext.RouteData.Values["controller"] as string;
            string? currentAction = ViewContext.RouteData.Values["action"] as string;
            bool IsActive(string controller, string? action = null) =>
                string.Equals(currentController, controller, System.StringComparison.OrdinalIgnoreCase)
                && (action == null || string.Equals(currentAction, action, System.StringComparison.OrdinalIgnoreCase));
        }
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow sticky-top mb-3 sc-navbar">
            <div class="container-fluid">
                <a class="navbar-brand text-white d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-cubes"></i>
                    <span>SCM</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white @(IsActive("Home","Index") ? "active" : null)" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-gauge-high"></i> Dashboard</a>
                        </li>
                        @* Visible to Admin and WarehouseStaff *@
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            if (User.IsInRole(SupplyChainManagement.Models.Enums.UserRoles.Admin) || User.IsInRole(SupplyChainManagement.Models.Enums.UserRoles.WarehouseStaff))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white @(IsActive("Products","Index") ? "active" : null)" asp-area="" asp-controller="Products" asp-action="Index"><i class="fa-solid fa-boxes-stacked"></i> Products</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white @(IsActive("Inventories","Index") ? "active" : null)" asp-area="" asp-controller="Inventories" asp-action="Index"><i class="fa-solid fa-warehouse"></i> Inventory</a>
                                </li>
                            }
                            if (User.IsInRole(SupplyChainManagement.Models.Enums.UserRoles.Admin) || User.IsInRole(SupplyChainManagement.Models.Enums.UserRoles.WarehouseStaff))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white @(IsActive("Orders","Index") ? "active" : null)" asp-area="" asp-controller="Orders" asp-action="Index"><i class="fa-solid fa-file-invoice"></i> Orders</a>
                                </li>
                            }
                            @* Supplier-specific menu items *@
                            if (User.IsInRole(SupplyChainManagement.Models.Enums.UserRoles.Supplier))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white @(IsActive("Supplier") ? "active" : null)" href="#" id="supplierDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fa-solid fa-industry"></i> Supplier Portal
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="supplierDropdown">
                                        <li><a class="dropdown-item" asp-controller="Supplier" asp-action="OrdersReceived">Orders Received</a></li>
                                        <li><a class="dropdown-item" asp-controller="Supplier" asp-action="ConfirmOrders">Confirm Orders</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Supplier" asp-action="ProductCatalog">My Products</a></li>
                                        <li><a class="dropdown-item" asp-controller="Supplier" asp-action="CreateProduct">Add New Product</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Supplier" asp-action="ShipmentUpdates">Shipment Updates</a></li>
                                        <li><a class="dropdown-item" asp-controller="Supplier" asp-action="InvoicesPayments">Invoices & Payments</a></li>
                                    </ul>
                                </li>
                                <a class="nav-link text-white @(IsActive("Orders","Index") ? "active" : null)" asp-area=""  asp-controller="Orders" asp-action="Index"><i class="fa-solid fa-file-invoice"></i> Orders</a>
                            }
                            if (User.IsInRole(SupplyChainManagement.Models.Enums.UserRoles.Admin) || User.IsInRole(SupplyChainManagement.Models.Enums.UserRoles.WarehouseStaff))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white @(IsActive("Shipments","Index") ? "active" : null)" asp-area="" asp-controller="Shipments" asp-action="Index"><i class="fa-solid fa-truck-fast"></i> Shipments</a>
                                </li>
                            }
                            if (User.IsInRole(SupplyChainManagement.Models.Enums.UserRoles.Admin))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white @(IsActive("Warehouses","Index") ? "active" : null)" asp-area="" asp-controller="Warehouses" asp-action="Index"><i class="fa-solid fa-building"></i> Warehouses</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white @(IsActive("Suppliers","Index") ? "active" : null)" asp-area="" asp-controller="Suppliers" asp-action="Index"><i class="fa-solid fa-people-carry-box"></i> Suppliers</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white @(IsActive("Users","Index") ? "active" : null)" asp-area="" asp-controller="Users" asp-action="Index"><i class="fa-regular fa-user"></i> Users</a>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-primary">
        <div class="container text-center text-white">
            &copy; 2025 - SupplyChainManagement by Sufian 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_Toast" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
