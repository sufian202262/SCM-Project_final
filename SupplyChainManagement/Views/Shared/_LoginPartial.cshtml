@using Microsoft.AspNetCore.Identity
@using SupplyChainManagement.Models
@using SupplyChainManagement.Models.Enums
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            @(
                User.IsInRole(UserRoles.Admin) ? "Admin" :
                User.IsInRole(UserRoles.WarehouseStaff) ? "Warehouse Staff" :
                User.IsInRole(UserRoles.Supplier) ? "Supplier" :
                (User.Identity?.Name?.Split('@').FirstOrDefault() ?? "User")
            )
        </a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
            <button type="submit" class="nav-link btn btn-link text-white">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
}
</ul>
