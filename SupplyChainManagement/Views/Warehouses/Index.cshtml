@model IEnumerable<SupplyChainManagement.Models.Warehouse>
@{
    ViewData["Title"] = "Warehouses";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0"><i class="fas fa-warehouse"></i> Warehouses</h1>
    <span class="badge bg-primary-subtle text-primary border border-primary">@Model?.Count() total</span>
</div>

@if (!(Model?.Any() ?? false))
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No warehouses found.
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Location</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th class="text-end">Stats</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var w in Model)
                    {
                        var invCount = w.Inventories?.Count ?? 0;
                        var staffCount = w.Staff?.Count ?? 0;
                        var orderCount = w.Orders?.Count ?? 0;
                        <tr>
                            <td><span class="badge bg-light text-dark border">#@w.Id</span></td>
                            <td class="fw-semibold">@w.Name</td>
                            <td>@w.Location</td>
                            <td>@w.Email</td>
                            <td>@w.PhoneNumber</td>
                            <td class="text-end">
                                <span class="badge bg-light text-dark border">@invCount inventories</span>
                                <span class="badge bg-light text-dark border ms-1">@orderCount orders</span>
                                <span class="badge bg-light text-dark border ms-1">@staffCount staff</span>
                            </td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@w.Id"><i class="fas fa-eye"></i> Details</a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
