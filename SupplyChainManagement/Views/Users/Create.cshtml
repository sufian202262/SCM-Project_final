@model CreateUserViewModel
@{
    ViewData["Title"] = "Create New User";
    var allRoles = ViewBag.AllRoles as List<string>;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-user-plus"></i> Create New User</h1>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">User Information</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="FirstName" class="form-label"></label>
                                <input asp-for="FirstName" class="form-control" placeholder="First name" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="LastName" class="form-label"></label>
                                <input asp-for="LastName" class="form-control" placeholder="Last name" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" type="email" placeholder="user@example.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password (min 6 chars)" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Role" class="form-label"></label>
                        <select asp-for="Role" class="form-select" id="roleSelect" onchange="toggleRoleFields()">
                            <option value="">-- Select Role --</option>
                            @foreach (var role in allRoles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>

                    <!-- Supplier-specific fields -->
                    <div class="mb-3 supplier-field" style="display: none;">
                        <label asp-for="CompanyName" class="form-label">Company Name</label>
                        <input asp-for="CompanyName" class="form-control" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3 supplier-field" style="display: none;">
                        <label asp-for="Phone" class="form-label">Phone</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3 supplier-field" style="display: none;">
                        <label asp-for="Address" class="form-label">Address</label>
                        <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3 supplier-field" style="display: none;">
                        <label asp-for="Website" class="form-label">Website</label>
                        <input asp-for="Website" class="form-control" />
                        <span asp-validation-for="Website" class="text-danger"></span>
                    </div>

                    <!-- Warehouse staff-specific fields -->
                    <div class="mb-3 warehouse-field" style="display: none;">
                        <label asp-for="WarehouseName" class="form-label">Warehouse Name</label>
                        <input asp-for="WarehouseName" class="form-control" />
                        <span asp-validation-for="WarehouseName" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3 warehouse-field" style="display: none;">
                        <label asp-for="WarehouseLocation" class="form-label">Warehouse Location</label>
                        <input asp-for="WarehouseLocation" class="form-control" />
                        <span asp-validation-for="WarehouseLocation" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Create User
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        function toggleRoleFields() {
            const roleSelect = document.getElementById('roleSelect');
            const supplierFields = document.querySelectorAll('.supplier-field');
            const warehouseFields = document.querySelectorAll('.warehouse-field');
            
            // Hide all role-specific fields first
            supplierFields.forEach(field => field.style.display = 'none');
            warehouseFields.forEach(field => field.style.display = 'none');
            
            // Show fields based on selected role
            if (roleSelect.value === 'Supplier') {
                supplierFields.forEach(field => field.style.display = 'block');
            } else if (roleSelect.value === 'WarehouseStaff') {
                warehouseFields.forEach(field => field.style.display = 'block');
            }
        }

        // Initialize correct fields visibility and preselect the role if provided by the model
        document.addEventListener('DOMContentLoaded', function () {
            const roleFromModel = '@(Model?.Role ?? string.Empty)';
            const select = document.getElementById('roleSelect');
            if (select) {
                if (roleFromModel && !select.value) {
                    // Try to set the select to the model's role if not already selected
                    select.value = roleFromModel;
                }
                // Ensure fields are toggled correctly on first load
                toggleRoleFields();
            }
        });
    </script>
}
