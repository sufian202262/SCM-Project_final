@model SupplyChainManagement.Models.Shipment
@{
    ViewData["Title"] = "Delete Shipment";
}
<h1>Delete Shipment</h1>
<hr />
<h3>Are you sure you want to delete this?</h3>
<dl class="row">
    <dt class="col-sm-2">Shipment #</dt>
    <dd class="col-sm-10">@Model.Id</dd>
    <dt class="col-sm-2">Order</dt>
    <dd class="col-sm-10">@Model.OrderId</dd>
    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>
    <dt class="col-sm-2">Courier</dt>
    <dd class="col-sm-10">@Model.Courier</dd>
    <dt class="col-sm-2">Tracking</dt>
    <dd class="col-sm-10">@Model.TrackingNumber</dd>
</dl>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
